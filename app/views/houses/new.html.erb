<%= simple_form_for [@user, @house], url: houses_path, method: :post do |f| %>

	<%= f.input :title %>
	<%= f.input :address %>
	<%= f.input :image %>
	<%= f.input :description %>
	<%= f.input :price_in_pence %>
	<%= f.input :number_of_rooms %>
	<%= f.input :max_guests %>
	
	<% if params[:action] == "edit" %>
		<%= f.button :submit, "Save" %>
	<% else %>
		<%= f.button :submit, "Add a room" %>
	<% end %>


<% end %>
